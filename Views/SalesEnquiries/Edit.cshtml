@model KLENZ.Models.SalesEnquiry

@{
    ViewData["Title"] = "Edit Sales Enquiry";
}

<div class="card shadow-lg rounded-card">
    <div class="card-header bg-primary bg-opacity-75 text-white">
        <h4 class="mb-0">Edit Sales Enquiry</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CompanyName" class="fw-bold"></label>
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReferedBy" class="fw-bold"></label>
                        <input asp-for="ReferedBy" class="form-control" />
                        <span asp-validation-for="ReferedBy" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EnquiryDetails" class="fw-bold"></label>
                        <input asp-for="EnquiryDetails" class="form-control" />
                        <span asp-validation-for="EnquiryDetails" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EnquiryDate" class="fw-bold"></label>
                        <input asp-for="EnquiryDate" type="date" class="form-control" />
                        <span asp-validation-for="EnquiryDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerDetails" class="fw-bold"></label>
                        <input asp-for="CustomerDetails" class="form-control" />
                        <span asp-validation-for="CustomerDetails" class="text-danger"></span>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Status" class="fw-bold"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Remarks" class="fw-bold"></label>
                        <input asp-for="Remarks" class="form-control" />
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReminderDate" class="fw-bold"></label>
                        <input asp-for="ReminderDate" type="date" class="form-control" />
                        <span asp-validation-for="ReminderDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReminderPlace" class="fw-bold"></label>
                        <input asp-for="ReminderPlace" class="form-control" />
                        <span asp-validation-for="ReminderPlace" class="text-danger"></span>
                    </div>

                    <!-- File Upload Field -->
                    <div class="mb-3">
                        <label class="fw-bold">Upload File</label>
                        <input type="file" name="File" class="form-control" />
                    </div>

                    <!-- Show Existing File Link if Available -->
                    @if (!string.IsNullOrEmpty(Model.FilePath))
                    {
                        <div class="mb-3">
                            <label class="fw-bold">Current File</label>
                            <a href="@Url.Content(Model.FilePath)" target="_blank" class="btn btn-sm btn-outline-primary" title="Click to view">
                                <i class="bi bi-file-earmark-text"></i> View File
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Buttons Row -->
            <div class="row mt-3">
                <div class="col-md-12 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
