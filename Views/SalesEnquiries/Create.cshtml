@model KLENZ.Models.SalesEnquiry

@{
    ViewData["Title"] = "Sales Enquiry";
}
@section Styles {
    <style>
        .card {
            width: 100%;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            background: #fff;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn {
            border-radius: 8px;
        }


        .btn-white {
            color: var(--bs-primary);
            background-color: white;
            border-radius: 10px;
            font-weight: bold;
            padding: 6px 12px;
        }


            .btn-white:hover {
                background-color: white;
                color: var(--bs-primary);
            }

    </style>
}

<div class="card shadow-lg">
    <div class="card-header bg-primary bg-opacity-75 text-white d-flex">
        <div class="ms-5">
            <a asp-action="Index" class="btn btn-white ms-lg-5">
                <i class="bi bi-arrow-left-circle text-primary"></i> Back to List
            </a>
        </div>
        <div class="flex-grow-1">
            <h4 class="mb-0 text-white ms-5">Create Sales Enquiry</h4>
        </div>
    </div>





    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row d-flex justify-content-center">
                    <div class="col-md-4">
                            <div class="mb-4">
                                <label asp-for="CompanyNameId" class="fw-bold  mb-1 text-start d-block"></label>
                                <select asp-for="CompanyNameId" class="form-control" asp-items="ViewBag.Companies">
                                    <option value="">-- Select Company --</option>
                                </select>
                                <span asp-validation-for="CompanyNameId" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="ReferedBy" class="fw-bold mb-1 text-start d-block"></label>
                        <input asp-for="ReferedBy" autocomplete="off" class="form-control" />
                        <span asp-validation-for="ReferedBy" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="EnquiryDetails" class="fw-bold mb-1 text-start d-block"></label>
                        <input asp-for="EnquiryDetails" autocomplete="off" class="form-control" />
                        <span asp-validation-for="EnquiryDetails" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="EnquiryDate" class="fw-bold mb-1 text-start d-block"></label>
                        <input asp-for="EnquiryDate" autocomplete="off" type="date" class="form-control" />
                        <span asp-validation-for="EnquiryDate" class="text-danger"></span>
                    </div>


                    <div class="button-group mt-4 d-flex justify-content-start gap-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create
                        </button>
                        <button type="reset" class="btn btn-warning">
                            <i class="bi bi-arrow-clockwise"></i> Reset
                        </button>
                    </div>

                </div>

                <!-- Right Column -->
                <div class="col-md-4">
                    <div class="mb-4">
                        <label asp-for="Status" class="fw-bold mb-1 text-start d-block"></label>
                        <input asp-for="Status" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Remarks" class="fw-bold mb-1 text-start d-block"></label>
                        <input asp-for="Remarks" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="ReminderDate" class="fw-bold mb-1 text-start d-block"></label>
                        <input asp-for="ReminderDate" type="date" class="form-control" />
                        <span asp-validation-for="ReminderDate" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label class="fw-bold mb-1 text-start d-block">Upload File</label>
                        <input type="file" name="File" class="form-control" />
                    </div>
                </div>
            </div>

           

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
