@using KLENZ.Controllers
@model PositiveEnquiry

@{
    ViewData["Title"] = "Delete Positive Enquiry";
}

<div class="card shadow-lg rounded-card">
    <div class="card-header bg-danger bg-opacity-75 text-white">
        <h4 class="mb-0">Delete Positive Enquiry</h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger">Are you sure you want to delete this record?</h5>
        <hr />

        <!-- Bootstrap Grid for Displaying Fields -->
        <dl class="row">
            <dt class="col-md-2 fw-bold">Quotation Date</dt>
            <dd class="col-md-4">@Model.QuotationDate?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-md-2 fw-bold">Company Name</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.CompanyNameStr)</dd>

            <dt class="col-md-2 fw-bold">Product Details</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.ProductDetails)</dd>

            <dt class="col-md-2 fw-bold">Customer Details</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.CustomerDetails)</dd>

            <dt class="col-md-2 fw-bold">Quotation Value</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.QuotationValue)</dd>

            <dt class="col-md-2 fw-bold">Current Status</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.CurrentStatus)</dd>

            <dt class="col-md-2 fw-bold">Created Date</dt>
            <dd class="col-md-4">@Model.CreatedDateTime?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-md-2 fw-bold">Created User</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.CreatedUserId)</dd>
        </dl>

        <!-- Buttons with proper spacing -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-12 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
</div>
