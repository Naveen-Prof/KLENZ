@model KLENZ.Models.ProjectList

@{
    ViewData["Title"] = "Create Project";
}

<script src="~/js/custom_form.js"></script>

<div class="card rounded-card shadow-lg mt-3">
    <div class="card-header bg-primary bg-opacity-75 text-white rounded-top d-flex align-items-center">
        <i class="bi bi-folder-plus me-2 fs-4"></i>
        <h4 class="mb-0">Create New Project</h4>
    </div>

    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FyYear" class="form-label fw-bold"></label>
                    <select asp-for="FyYear" class="form-select" asp-items="ViewBag.FyYear">
                        <option value="">-- Select Financial Year --</option>
                    </select>
                    <span asp-validation-for="FyYear" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="WorkOrderDate" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                        <input asp-for="WorkOrderDate" type="date" class="form-control" />
                    </div>
                    <span asp-validation-for="WorkOrderDate" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CompanyNameId" class="fw-bold"></label>
                    <select asp-for="CompanyNameId" class="form-control" asp-items="ViewBag.Companies">
                        <option value="">-- Select Company --</option>
                    </select>
                    <span asp-validation-for="CompanyNameId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CustomerDetails" class="form-label fw-bold"></label>
                    <input asp-for="CustomerDetails" class="form-control" placeholder="Enter customer details" />
                    <span asp-validation-for="CustomerDetails" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="WorkDetails" class="form-label fw-bold"></label>
                    <input asp-for="WorkDetails" class="form-control" placeholder="Enter work details" />
                    <span asp-validation-for="WorkDetails" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="WorkOrderValue" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <span class="input-group-text">₹</span>
                        <input asp-for="WorkOrderValue" value="000000.00" class="form-control" type="number" step="0.01" min="0" max="9999999999999999.99" />
                    </div>
                    <span asp-validation-for="WorkOrderValue" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Remarks" class="form-label fw-bold"></label>
                    <textarea asp-for="Remarks" class="form-control" rows="2" placeholder="Enter remarks"></textarea>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Create Project
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
