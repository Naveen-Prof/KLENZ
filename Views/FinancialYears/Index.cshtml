@model IEnumerable<KLENZ.Models.FinancialYear>

@{
    ViewData["Title"] = "Financial Years";
}

<script src="~/js/custom_datatables.js"></script>
<script src="~/js/pdf_excel_export.js"></script>

<style>
    .table {
        table-layout: fixed;
        width: 99%;
    }

        .table th:nth-child(1), .table td:nth-child(1) {
            width: 40px;
        }

        .table th:nth-child(2), .table td:nth-child(2) {
            width: 150px;
        }

        .table th:nth-child(3), .table td:nth-child(3) {
            width: 100px;
        }

        .table th:nth-child(4), .table td:nth-child(4) {
            width: 180px;
        }

        .table th:nth-child(5), .table td:nth-child(5) {
            width: 120px;
        }
</style>

<div class="card rounded-card shadow-lg mt-3">
    <div class="card-header d-flex justify-content-between align-items-center bg-primary bg-opacity-75 text-white rounded-top">
        <div class="d-flex align-items-center">
            <i class="bi bi-calendar2-check me-2 fs-4"></i>
            <h4 class="mb-0">Financial Years</h4>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-light text-primary shadow-sm custom-btn">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>

            <!-- Export to Excel Button -->
            <i id="exportExcel_FinancialYear" class="bi bi-file-earmark-excel-fill text-success fs-4 export-icon"></i>

            <!-- Export to PDF Button -->
            <i id="exportPdf_FinancialYear" class="bi bi-file-earmark-pdf-fill text-danger fs-4 export-icon"></i>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table datatable rounded-table">
                <thead class="table-dark">
                    <tr>
                        <th>Actions</th>
                        <th>@Html.DisplayNameFor(model => model.FyYear)</th>
                        <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedDateTime)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedUserId)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="text-decoration-none">
                                    <i class="bi bi-pencil-square text-success"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="text-decoration-none">
                                    <i class="bi bi-eye text-primary"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="text-decoration-none">
                                    <i class="bi bi-trash text-danger"></i>
                                </a>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.FyYear)</td>
                            <td>@(item.IsActive == 1 ? "Yes" : "No")</td>
                            <td>@item.CreatedDateTime?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedUserId)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
