@model KLENZ.Models.QuotationReport

@{
    ViewData["Title"] = "Quotation Report";
}

<div class="card shadow-lg rounded-card">
    <div class="card-header bg-primary bg-opacity-75 text-white">
        <h4 class="mb-0">Create Quotation Report</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="QuotationDate" class="fw-bold"></label>
                        <input asp-for="QuotationDate" type="date" class="form-control" />
                        <span asp-validation-for="QuotationDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CompanyName" class="fw-bold"></label>
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProductDetails" class="fw-bold"></label>
                        <input asp-for="ProductDetails" class="form-control" />
                        <span asp-validation-for="ProductDetails" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerDetails" class="fw-bold"></label>
                        <input asp-for="CustomerDetails" class="form-control" />
                        <span asp-validation-for="CustomerDetails" class="text-danger"></span>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="mb-5">
                        <label asp-for="QuotationValue" class="fw-bold"></label>
                        <input asp-for="QuotationValue" class="form-control" type="number" step="0.01" min="0" max="9999999999999999.99" />
                        <span asp-validation-for="QuotationValue" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label class="form-check-label fw-bold">
                            <input type="checkbox" class="form-check-input" id="IsPositive" name="IsPositive" 
                            value="true" @(Model?.IsPositive == 1 ? "checked" : "") />
                            @* @Html.DisplayNameFor(model => model.IsPositive) *@ Is Positive Response
                        </label>
                        <span asp-validation-for="IsPositive" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Remarks" class="fw-bold"></label>
                        <textarea asp-for="Remarks" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
