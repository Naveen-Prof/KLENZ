@model KLENZ.Models.QuotationReport

@{
    ViewData["Title"] = "Quotation Report Details";
}

<div class="card shadow-lg rounded-card">
    <div class="card-header bg-info bg-opacity-75 text-white">
        <h4 class="mb-0">Quotation Report Details</h4>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-md-2 fw-bold">Quotation Date</dt>
            <dd class="col-md-4">@Model.QuotationDate?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-md-2 fw-bold">Company Name</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.CompanyName)</dd>

            <dt class="col-md-2 fw-bold">Product Details</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.ProductDetails)</dd>

            <dt class="col-md-2 fw-bold">Customer Details</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.CustomerDetails)</dd>

            <dt class="col-md-2 fw-bold">Quotation Value</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.QuotationValue)</dd>

            <dt class="col-md-2 fw-bold">Remarks</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.Remarks)</dd>

            <dt class="col-md-2 fw-bold">Is Positive</dt>
            <dd class="col-md-4">@(Model.IsPositiveBool ? "Yes" : "No")</dd>

            <dt class="col-md-2 fw-bold">Created Date</dt>
            <dd class="col-md-4">
                @Model.CreatedDateTime?.ToString("dd/MM/yyyy HH:mm")
            </dd>

            <dt class="col-md-2 fw-bold">Created User</dt>
            <dd class="col-md-4">@Html.DisplayFor(model => model.CreatedUserName)</dd>
        </dl>

        <!-- Buttons with proper spacing -->
        <div class="row">
            <div class="col-md-12 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>
