@model IEnumerable<KLENZ.Models.QuotationReport>

@{
    ViewData["Title"] = "Quotation Reports";
}

<div class="card-header d-flex justify-content-between align-items-center bg-primary bg-opacity-75 text-white rounded-top">
    <div class="d-flex align-items-center">
        @* <i class="bi bi-file-earmark-spreadsheet me-2 fs-4"></i> <!-- Bootstrap icon --> *@
        @* <i class="bi bi-file-text me-2 fs-4"></i> *@
        <i class="bi bi-clipboard-data me-2 fs-4"></i>

        <h4 class="mb-0">Quotation Reports</h4>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn btn-light text-primary shadow-sm custom-btn">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
        <i id="exportExcel" class="bi bi-file-earmark-excel-fill text-success fs-4 export-icon"></i>

        <!-- Export to PDF Button -->
        <i id="exportPdf" class="bi bi-file-earmark-pdf-fill text-danger fs-4 export-icon"></i>

    </div>
</div>

<div class="card-body">
    <div class="table-responsive">
        <table class="table datatable rounded-table">
            <thead class="table-dark">

                <tr>
                    <th>Actions</th>
                    <th>
                        @Html.DisplayNameFor(model => model.QuotationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductDetails)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerDetails)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QuotationValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remarks)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsPositive)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="text-decoration-none">
                                <i class="bi bi-pencil-square text-success"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="text-decoration-none">
                                <i class="bi bi-eye text-primary"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="text-decoration-none">
                                <i class="bi bi-trash text-danger"></i>
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuotationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductDetails)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerDetails)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuotationValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remarks)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsPositive)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>