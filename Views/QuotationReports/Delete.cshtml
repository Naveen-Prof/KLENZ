@model KLENZ.Models.QuotationReport

@{
    ViewData["Title"] = "Delete Quotation Report";
}

<div class="card shadow-lg mt-3">
    <div class="card-header bg-danger bg-opacity-75 text-white d-flex align-items-center">
        <i class="bi bi-trash3-fill me-2 fs-4"></i>
        <h4 class="mb-0">Delete Quotation Report</h4>
    </div>

    <div class="card-body">
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Warning:</strong> Are you sure you want to delete this quotation report? This action cannot be undone.
        </div>

        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-calendar"></i> @Html.DisplayNameFor(model => model.QuotationDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.QuotationDate)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-buildings"></i> @Html.DisplayNameFor(model => model.CompanyNameStr)
            </dt>
            <dd class="col-sm-9">
                @(Model.Company?.ShortName ?? "N/A")
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-card-list"></i> @Html.DisplayNameFor(model => model.ProductDetails)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProductDetails)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.CustomerDetails)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CustomerDetails)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-cash-stack"></i> @Html.DisplayNameFor(model => model.QuotationValue)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.QuotationValue)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-chat-left-text"></i> @Html.DisplayNameFor(model => model.Remarks)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Remarks)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-check-circle"></i> @Html.DisplayNameFor(model => model.IsPositive)
            </dt>
            <dd class="col-sm-9">
                @(Model.IsPositiveBool ? "Yes" : "No")
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-clock-history"></i> @Html.DisplayNameFor(model => model.CreatedDateTime)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreatedDateTime)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person-badge"></i> @Html.DisplayNameFor(model => model.CreatedUserId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreatedUserId)
            </dd>
        </dl>
    </div>

    <div class="card-footer d-flex">
        <form asp-action="Delete" method="post" class="w-100">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between w-100">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
