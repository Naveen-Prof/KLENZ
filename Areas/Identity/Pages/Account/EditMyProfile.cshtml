@page
@model KLENZ.Areas.Identity.Pages.Account.EditMyProfileModel
@{
    ViewData["Title"] = "Edit Profile";
}

<form method="post" enctype="multipart/form-data" class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-pencil-square fs-3 me-2"></i>
                    <h5 class="mb-0">Edit Profile</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <label for="ProfilePicture" class="position-relative d-inline-block" style="cursor: pointer;">
                            <img src="@(Model.CurrentProfilePicture != null
                                     ? $"data:image/png;base64,{Convert.ToBase64String(Model.CurrentProfilePicture)}"
                                     : Url.Content("~/images/profile.png"))"
                                 class="rounded-circle shadow"
                                 alt="Profile Picture"
                                 style="width: 150px; height: 150px; object-fit: cover;" />
                            <i class="bi bi-pencil-fill position-absolute bottom-0 end-0 bg-light p-2 rounded-circle shadow-sm"
                               style="font-size: 1.1rem;"></i>
                        </label>
                        <input type="file" id="ProfilePicture" name="ProfilePicture" class="d-none" />
                    </div>

                    <!-- Form fields in two-column layout -->
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label" style="font-weight:bold">Full Name</label>
                        <div class="col-sm-8">
                            <input asp-for="Name" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label" style="font-weight:bold">Email</label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label   " style="font-weight:bold">Phone</label>
                        <div class="col-sm-8">
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label" style="font-weight:bold">Date of Birth</label>
                        <div class="col-sm-8">
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label class="col-sm-4 col-form-label" style="font-weight:bold">Address</label>
                        <div class="col-sm-8">
                            <input asp-for="Address" class="form-control" />
                        </div>
                    </div>

                    <div class="text-center justify-content-evenly">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save me-1"></i> Save Changes
                        </button>
                        <a href="/Identity/Account/MyProfile" class="btn btn-secondary ms-2">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
